        return '<a href="../ReworkFlow/ShowImage/'+ rowdata.ReworkPictureId  +'" target="_blank" id="colorbox"><img src="../ReworkFlow/ShowImage/'+ rowdata.ReworkPictureId  +'" id="img' + rowdata.Id + '" style="width:50px;height:50px;" /></a>';
   }
    
