    function StopOrEmpty(cellvalue, options)
    {
    if(cellvalue == '在停')
    return "<span class='badge badge-info'>在停</span>";
    else
    return "<span class='badge badge-danger'>未停</span>";
    }


    function OnlineOrOutline(cellvalue, options)
