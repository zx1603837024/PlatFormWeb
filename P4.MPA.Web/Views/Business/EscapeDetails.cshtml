        //$('#employeeIdInput_chosen').css('width', '150px');
    });
    $(function () {
        pageInit();
    });
    function pageInit() {
        var template1 =
        {
            "groupOp": "AND",
            "rules": [
                { "field": "ParkName", "op": "bw", "data": "Client 1" },
                { "field": "BerthNumber", "op": "gt", "data": "20" }
            ]
        };

        var template2 =
        {
            "groupOp": "AND",
