    $('#myButton').on('click', function () {
        jQuery('#grid-table').jqGrid('setGridParam', {
            //escape()---中文转码
            // url: "../System/GetOperFunction?name=" + escape(arrayToJson(dataname).toString()),
            ajaxSelectOptions: { type: "GET", async: false },
