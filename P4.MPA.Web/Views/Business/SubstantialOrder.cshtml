                    @Html.Raw(Model.AllOption)
                    @foreach (var entity in Model.regionList)
                    {
                        <option value="@entity.Id">@entity.RegionName</option>
                    }
                </select>
            </td>
            <td style="width:8%;">停车场：</td>
            <td style="width:13%;">
