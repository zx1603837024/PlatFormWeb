                    index: 'Id',
                    search: false,
                    sorttype: "int",
                    key: true,
                    hidden: true
                },
                {
                    name: 'RegionName',
                    index: 'RegionName',
                    search: false
                },
                {
                    name: 'ParkName',
                    editable: false,
                    index: 'ParkName',
                    search: true,
                    stype: 'select',
                    searchoptions: {
                        dataUrl: '../Berthsecs/GetAllParkName/' + (new Date()).getMilliseconds(),
                        sopt: ['eq']
                    }
                },
                {
                    name: 'BerthsecName',
                    index: 'BerthsecName',
                    search: true,
                    stype: 'select',
                    searchoptions: {
                        dataUrl: '../Berthsecs/GetBerthsecListSelect/' + (new Date()).getMilliseconds(),
                        sopt: ['eq']
                    }
                },
                {
