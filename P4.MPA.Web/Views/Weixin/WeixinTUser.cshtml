@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    ViewBag.Title = L("WeixinTUser");
    ViewBag.ActiveMenu = "WeixinTUser";
}
<table id="grid-table"></table>
<div id="grid-pager"></div>

@section scriptsgrid
{
    //主表
    jQuery(grid_selector).jqGrid({
    url: '../Weixin/GetWeixinTUserList',
    datatype: "json",
    mtype: "post",
    height: 'auto',
    autowidth: true,
    shrinkToFit:false,
    ajaxSelectOptions: { type: "GET" , async: false},
    ajaxGridOptions : {type:"POST",async: false},
    colNames: ['操作','ID', '昵称', '邮箱', '手机号', 'QQ', 'openId', '是否自动登录', '注册时间', '最后登录时间', '积分', '绑定车牌', '车型', '绑定车牌', '车型', '绑定车牌', '车型'],
    colModel: [{
    name: 'myac', index: '', width: 80, fixed: true, sortable: true, resize: false, search: false,
    formatter: 'actions', hidden: window.rowedit,
    formatoptions: {
    keys: true,
    delOptions: { recreateForm: true, beforeShowForm: beforeDeleteCallback }
    }
    },
    { name: 'Id', index: 'Id', sorttype: "int", key: true, hidden: true},
    { name: 'nickName', index: 'nickName', editable: true },
    { name: 'email', index: 'email', editable: true },
    { name: 'tel', index: 'tel', editable: true },
    { name: 'qq', index: 'qq', editable: true },
    { name: 'openId', index: 'openId', editable: true, width:230 },
    { name: 'remember', index: 'remember', editable: true },
    { name: 'registerDateStr', index: 'registerDateStr', editable: true },
    { name: 'lastLoginDateStr', index: 'lastLoginDateStr', editable: true },
    { name: 'levels', index: 'levels', editable: true },
    { name: 'CarNumber1', index: 'CarNumber1', editable: true },
    { name: 'Model1', index: 'Model1', editable: true },
    { name: 'CarNumber2', index: 'CarNumber2', editable: true },
    { name: 'Model2', index: 'Model2', editable: true },
    { name: 'CarNumber3', index: 'CarNumber3', editable: true },
    { name: 'Model3', index: 'Model3', editable: true }
    ],
    viewrecords: true,
    rowNum: 10,
    rowList: [10, 20, 30],
    pager: pager_selector,
    altRows: true,
    sortname: 'Id',
    sortorder: 'desc',
    toppager: false,
    editurl: "../WhiteLists/ProcessWhiteLists",
    multiselect: true,
    //multikey: "ctrlKey",
    multiboxonly: true,
    loadComplete: function () {
    var table = this;
    setTimeout(function () {
    styleCheckbox(table);
    updateActionIcons(table);
    updatePagerIcons(table);
    enableTooltips(table);
    }, 0);
    }
    });
}








