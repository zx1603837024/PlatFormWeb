@using P4.Web.Models.Weixin
@model WeixinModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>综合停车管理与交通诱导系统云平台</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- basic styles -->
    <script src="~/assets/js/chosen.jquery.min.js"></script>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css" />
    <!--[if IE 7]>
      <link rel="stylesheet" href="../../assets/css/font-awesome-ie7.min.css" />
    <![endif]-->
    <!-- page specific plugin styles -->
    <!-- fonts -->
    <!--<link rel="stylesheet" href="https://fonts.css.network/css?family=Open+Sans:400,300" />-->
    <!-- ace styles -->
    <link rel="stylesheet" href="~/assets/css/ace.min.css" />
    <link rel="stylesheet" href="~/assets/css/ace-rtl.min.css" />
    <link rel="stylesheet" href="~/assets/css/chosen.css" />

    <script src="~/assets/global/plugins/jquery-sweetalert/sweetalert-dev.js"></script>
    <link rel="stylesheet" href="~/assets/global/plugins/jquery-sweetalert/sweetalert.css" />

    <script src="../../assets/js/jquery-2.0.3.min.js"></script>
    <link rel="shortcut icon" href="~/favicon.ico" />

</head>
    <body>
        <div class="main-container">
            <div class="main-content">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        <div class="login-container">
                                <div class="center">
                                    <h1>
                                        <img src="~/assets/avatars/fx.png" width="32px" height="32px" />
                                        <span class="blue">交通诱导系统云平台</span>
                                    </h1>
                                    
                                    <div class="alert alert-info">
                                        <i class="icon-hand-right"></i>
                                        车主绑定车牌信息
                                    </div>

                                   
                                    <form class="form-horizontal" role="form">

                                        <div class="form-group">

                                            <select class="combobox" id="CarPlate1" name="CarPlate"
                                                    data-placeholder="选择车牌..." style="width:50px;">
                                                @foreach (var plate in Model.Weixinplate)
                                                {
                                                    if (Model.Weixinuser.CarNumber1.Substring(0, 1) == plate.Value)
                                                    {
                                                        <option value="@(plate.Value)" selected="selected">@(plate.Value)</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@(plate.Value)">@(plate.Value)</option>
                                                    }
                                                }
                                            </select>

                                                <input type="text" id="CarNumber11" value="@(Model.Weixinuser.CarNumber1.Substring(1, 1))" style="width:40px;" placeholder="" maxlength="1"/>
                                            <span>-</span>
                                                <input type="text" id="CarNumber12" value="@(Model.Weixinuser.CarNumber1.Substring(2, 1))" style="width:40px;" placeholder="" maxlength="1"/>
                                                <input type="text" id="CarNumber13" value="@(Model.Weixinuser.CarNumber1.Substring(3, 1))" style="width:40px;" placeholder="" maxlength="1"/>
                                                <input type="text" id="CarNumber14" value="@(Model.Weixinuser.CarNumber1.Substring(4, 1))" style="width:40px;" placeholder="" maxlength="1"/>
                                                <input type="text" id="CarNumber15" value="@(Model.Weixinuser.CarNumber1.Substring(5, 1))" style="width:40px;" placeholder="" maxlength="1"/>
                                                <input type="text" id="CarNumber16" value="@(Model.Weixinuser.CarNumber1.Substring(6, 1))" style="width:40px;" placeholder="" maxlength="1"/>
                                        </div>

                                        <div class="form-group">
                                            <select class="combobox" id="CarPlate2" name="CarPlate"
                                                    data-placeholder="选择车牌..." style="width:50px;">
                                                @foreach (var plate in Model.Weixinplate)
                                                {
                                                    if (Model.Weixinuser.CarNumber2.Substring(0, 1) == plate.Value)
                                                    {
                                                        <option value="@(plate.Value)" selected="selected">@(plate.Value)</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@(plate.Value)">@(plate.Value)</option>
                                                    }
                                                }
                                            </select>
                                            <input type="text" id="CarNumber21" value="@(Model.Weixinuser.CarNumber2.Substring(1, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <span>-</span>
                                            <input type="text" id="CarNumber22" value="@(Model.Weixinuser.CarNumber2.Substring(2, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber23" value="@(Model.Weixinuser.CarNumber2.Substring(3, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber24" value="@(Model.Weixinuser.CarNumber2.Substring(4, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber25" value="@(Model.Weixinuser.CarNumber2.Substring(5, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber26" value="@(Model.Weixinuser.CarNumber2.Substring(6, 1))" style="width:40px;" placeholder="" maxlength="1" />                        
                                        </div>

                                        <div class="form-group">
                                            <select class="combobox" id="CarPlate3" name="CarPlate"
                                                    data-placeholder="选择车牌..." style="width:50px;">
                                                @foreach (var plate in Model.Weixinplate)
                                                {
                                                    if (Model.Weixinuser.CarNumber3.Substring(0, 1) == plate.Value)
                                                    {
                                                        <option value="@(plate.Value)" selected="selected">@(plate.Value)</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@(plate.Value)">@(plate.Value)</option>
                                                    }
                                                }
                                            </select>
                                            <input type="text" id="CarNumber31" value="@(Model.Weixinuser.CarNumber3.Substring(1, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <span>-</span>
                                            <input type="text" id="CarNumber32" value="@(Model.Weixinuser.CarNumber3.Substring(2, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber33" value="@(Model.Weixinuser.CarNumber3.Substring(3, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber34" value="@(Model.Weixinuser.CarNumber3.Substring(4, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber35" value="@(Model.Weixinuser.CarNumber3.Substring(5, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                            <input type="text" id="CarNumber36" value="@(Model.Weixinuser.CarNumber3.Substring(6, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                        </div>

                                            <div class="col-md-offset-3 col-md-9">
                                                <button class="btn btn-info" type="button" onclick="javascript:btnclick()">
                                                    <i class="icon-ok bigger-110"></i>
                                                    保存
                                                </button>
                                            </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </body>
</html>

    <script type="text/javascript">
        jQuery(function ($) {
            $('#id-disable-check').on('click', function () {
                var inp = $('#form-input-readonly').get(0);
                if (inp.hasAttribute('disabled')) {
                    inp.setAttribute('readonly', 'true');
                    inp.removeAttribute('disabled');
                    inp.value = "This text field is readonly!";
                }
                else {
                    inp.setAttribute('disabled', 'disabled');
                    inp.removeAttribute('readonly');
                    inp.value = "This text field is disabled!";
                }
            });
            

            $(".chosen-select").chosen();
            $('#chosen-multiple-style').on('click', function (e) {
                var target = $(e.target).find('input[type=radio]');
                var which = parseInt(target.val());
                if (which == 2) $('#form-field-select-4').addClass('tag-input-style');
                else $('#form-field-select-4').removeClass('tag-input-style');
            });

            
        });

        function btnclick() {
            swal({
                title: "系统提示",
                text: "正在处理数据....",
                timer: 500,
                showConfirmButton: false
            });
            var carnumber1 = $('#CarPlate1').val() + $('#CarNumber11').val() + $('#CarNumber12').val() + $('#CarNumber13').val() + $('#CarNumber14').val() + $('#CarNumber15').val() + $('#CarNumber16').val();     
            var carnumber2 = $('#CarPlate2').val() + $('#CarNumber21').val() + $('#CarNumber22').val() + $('#CarNumber23').val() + $('#CarNumber24').val() + $('#CarNumber25').val() + $('#CarNumber26').val();
            var carnumber3 = $('#CarPlate3').val() + $('#CarNumber31').val() + $('#CarNumber32').val() + $('#CarNumber33').val() + $('#CarNumber34').val() + $('#CarNumber35').val() + $('#CarNumber36').val();
            $.ajax({
                type: "Post",
                url: "/Weixin/SaveRegister?Carnumber1=" + carnumber1 + "&Carnumber2=" + carnumber2 + "&Carnumber3=" + carnumber3,
                success: function (data) {

                }, error: function () {
                    swal("错误!", "保存失败！", "error");
                }
            });
        }
</script>
