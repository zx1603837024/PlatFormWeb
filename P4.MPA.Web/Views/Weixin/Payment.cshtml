@using P4.Web.Models.Weixin
@model WeixinModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>立刻交费</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- basic styles -->
    <script src="../../assets/js/jquery-2.0.3.min.js"></script>
    <script src="~/assets/js/chosen.jquery.min.js"></script>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css" />
    <!--[if IE 7]>
      <link rel="stylesheet" href="../../assets/css/font-awesome-ie7.min.css" />
    <![endif]-->
    <!-- page specific plugin styles -->
    <!-- fonts -->
    <!--<link rel="stylesheet" href="https://fonts.css.network/css?family=Open+Sans:400,300" />-->
    <!-- ace styles -->
    <link rel="stylesheet" href="~/assets/css/ace.min.css" />
    <link rel="stylesheet" href="~/assets/css/ace-rtl.min.css" />
    <link rel="stylesheet" href="~/assets/css/chosen.css" />

    <script src="~/assets/global/plugins/jquery-sweetalert/sweetalert-dev.js"></script>
    <link rel="stylesheet" href="~/assets/global/plugins/jquery-sweetalert/sweetalert.css" />
    <link rel="shortcut icon" href="~/favicon.ico" />


</head>
<body>
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                        <div class="center">
                            <h1>
                                <img src="~/assets/avatars/fx.png" width="32px" height="32px" />
                                <span class="blue">交通诱导系统云平台</span>
                            </h1>


                            <div class="control-group">
                                <label class="control-label bolder blue">泊位选择</label>
                                <div class="radio">
                                   
                                    @for (int i = 0; i< Model.parking.Count;i++)
                                    {
                                        if (i == 0)
                                        {
                                    <label>
                                        <input name="berthnumber" type="radio" value="@(Model.parking[i].berthnumber)" id="berthid" checked="checked" class="ace" />
                                        <span class="lbl"> @(Model.parking[i].berthnumber)</span>
                                    </label>
                                        }
                                        else
                                        {
                                            <label>
                                                <input name="berthnumber" type="radio" value="@(Model.parking[i].berthnumber)" id="berthid" class="ace" />
                                                <span class="lbl"> @(Model.parking[i].berthnumber)</span>
                                            </label>
                                        }
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="text" id="Number1" value="@(Model.parking[0].berthnumber.Substring(0, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                <input type="text" id="Number2" value="@(Model.parking[0].berthnumber.Substring(1, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                <input type="text" id="Number3" value="@(Model.parking[0].berthnumber.Substring(2, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                <input type="text" id="Number4" value="@(Model.parking[0].berthnumber.Substring(3, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                <input type="text" id="Number5" value="@(Model.parking[0].berthnumber.Substring(4, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                <input type="text" id="Number6" value="@(Model.parking[0].berthnumber.Substring(5, 1))" style="width:40px;" placeholder=""  maxlength="1"/>
                                <input type="text" id="Number7" value="@(Model.parking[0].berthnumber.Substring(6, 1))" style="width:40px;" placeholder="" maxlength="1"/>
                            </div>

                                <div class="control-group">
                                    <label class="control-label bolder blue">车牌选择</label>
                                    <div class="radio">
                                      
                                        <label>
                                            <input name="carnumber" type="radio" checked="checked" value="@(Model.Weixinuser.CarNumber1)" class="ace" />
                                            <span class="lbl"> @(Model.Weixinuser.CarNumber1)</span>
                                        </label>
                                    
                                        <label>
                                            <input name="carnumber" type="radio" class="ace" value="@(Model.Weixinuser.CarNumber2)" />
                                            <span class="lbl"> @(Model.Weixinuser.CarNumber2)</span>
                                        </label>
                                    
                                        <label>
                                            <input name="carnumber" type="radio" class="ace" value="@(Model.Weixinuser.CarNumber3)" />
                                            <span class="lbl"> @(Model.Weixinuser.CarNumber3)</span>
                                        </label>
                                    </div>
                                </div>

                            <form class="form-horizontal" role="form">

                                <div class="form-group">
                                    <select class="combobox" id="CarPlate1" name="CarPlate"
                                            data-placeholder="选择车牌..." style="width:50px;">
                                        @foreach (var plate in Model.Weixinplate)
                                        {
                                            if (Model.Weixinuser.CarNumber1.Substring(0, 1) == plate.Value)
                                            {
                                                <option value="@(plate.Value)" selected="selected">@(plate.Value)</option>
                                            }
                                            else
                                            {
                                                <option value="@(plate.Value)">@(plate.Value)</option>
                                            }
                                        }
                                    </select>

                                    <input type="text" id="CarNumber11" value="@(Model.Weixinuser.CarNumber1.Substring(1, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                    <span>-</span>
                                    <input type="text" id="CarNumber12" value="@(Model.Weixinuser.CarNumber1.Substring(2, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                    <input type="text" id="CarNumber13" value="@(Model.Weixinuser.CarNumber1.Substring(3, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                    <input type="text" id="CarNumber14" value="@(Model.Weixinuser.CarNumber1.Substring(4, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                    <input type="text" id="CarNumber15" value="@(Model.Weixinuser.CarNumber1.Substring(5, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                    <input type="text" id="CarNumber16" value="@(Model.Weixinuser.CarNumber1.Substring(6, 1))" style="width:40px;" placeholder="" maxlength="1" />
                                </div>

                                <div class="control-group">
                                    <label class="control-label bolder blue">选择时长</label>
                                    <div class="radio">
                                        <label>
                                            <input name="stoptime" type="radio" checked="checked" value="1" class="ace" />
                                            <span class="lbl"> 1小时</span>
                                        </label>

                                        <label>
                                            <input name="stoptime" type="radio" class="ace" value="2" />
                                            <span class="lbl"> 2小时</span>
                                        </label>

                                        <label>
                                            <input name="stoptime" type="radio" class="ace" value="3"/>
                                            <span class="lbl"> 3小时</span>
                                        </label>
                                    </div>
                                </div>

                                <div class="space-12"></div>

                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn btn-info" type="button" onclick="javascript:btnclick()">
                                        <i class="icon-ok bigger-110"></i>
                                        停车
                                    </button>
                                </div>
                            </form>
                        </div>
                </div>
            </div>
    </div>
</body>
</html>
<script type="text/javascript">

    $("input[name='berthnumber']").click(function () {
        var berthid = $("input[name='berthnumber']:checked").val();
        $('#Number1').val(berthid.substring(0, 1));
        $('#Number2').val(berthid.substring(1, 2));
        $('#Number3').val(berthid.substring(2, 3));
        $('#Number4').val(berthid.substring(3, 4));
        $('#Number5').val(berthid.substring(4, 5));
        $('#Number6').val(berthid.substring(5, 6));
        $('#Number7').val(berthid.substring(6, 7));
    });

    $("input[name='carnumber']").click(function () {
        var carnumber = $("input[name='carnumber']:checked").val();
        $('#CarPlate1').val(carnumber.substring(0, 1));
        $('#CarNumber11').val(carnumber.substring(1, 2));
        $('#CarNumber12').val(carnumber.substring(2, 3));
        $('#CarNumber13').val(carnumber.substring(3, 4));
        $('#CarNumber14').val(carnumber.substring(4, 5));
        $('#CarNumber15').val(carnumber.substring(5, 6));
        $('#CarNumber16').val(carnumber.substring(6, 7));
    });

    function btnclick() {
        swal({
            title: "系统提示",
            text: "确定支付停车费10元？",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "确定,进入支付!",
            closeOnConfirm: false
        },
        function () {

            var berthnumber = $('#Number1').val() + $('#Number2').val() + $('#Number3').val() + $('#Number4').val() + $('#Number5').val() + $('#Number6').val() + $('#Number7').val();

            var carnumber = $('#CarPlate1').val() + $('#CarNumber11').val() + $('#CarNumber12').val() + $('#CarNumber13').val() + $('#CarNumber14').val() + $('#CarNumber15').val() + $('#CarNumber16').val();
            var stoptime = $("input[name='stoptime']:checked").val();
            $.ajax({
                type: "Post",
                url: "/Weixin/SavePayment?berthnumber=" + berthnumber + "&carnumber=" + carnumber + "&stoptime=" + stoptime + "&money=10",
                success: function (data) {
                    location.href = "../Weixin/PlatenumberArrearage";
                }, error: function () {
                    swal("错误!", "支付失败！", "error");
                }
            });
        });
    }
</script>
