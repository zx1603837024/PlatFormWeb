@section styles
{
<link rel="stylesheet" href="~/assets/css/bootstrapSwitch.css" />
<link rel="stylesheet" href="~/assets/css/chosen.css" />
}
@section scriptsindex{
<script src="~/assets/js/jquery-ui-1.10.3.custom.min.js"></script>
<script src="~/assets/js/jquery.ui.touch-punch.min.js"></script>

<script src="~/assets/js/date-time/bootstrap-datepicker.min.js"></script>
<script src="~/assets/js/date-time/daterangepicker.min.js"></script>

<script src="~/assets/js/chosen.jquery.min.js"></script>
}

<div class="row" style="margin:10px 0">
    <table style="width:100%;" border="0">
        <tr>
            <td style="width:6%;" align="right">用户名：</td>
            <td style="width:14%;">
                <input id="nickName" type="text" />
            </td>
            <td style="width:6%;" align="right">手机号码：</td>
            <td style="width:14%;">
                <input id="tel" type="text" />
            </td>
            <td style="width:7%;" align="right">车牌号：</td>
            <td style="width:14%;">
                <input id="PlateNumber" type="text" />
            </td>
            <td colspan="2" style="text-align: left;">
                <button type="button" id="myButton" data-loading-text="Loading..." class="btn btn-sm btn-primary"
                    autocomplete="off">
                    搜索
                </button>
            </td>
        </tr>
    </table>
</div>

<table id="grid-table"></table>
<div id="grid-pager"></div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static"
    data-keyboard="false">
    <div class="modal-dialog" role="document">
        <form>
            <div class="modal-content" style="width:800px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mone卡充值</h4>
                </div>
                <div class="modal-body">
                    <div class="content_wrap">
                        <form class="form-horizontal" role="form" id="feeFrom">

                            <div class="panel panel-default" style="margin-top:10px;">
                                <div class="panel-heading" data-toggle="collapse" data-parent="#accordion"
                                    href="#collapseOne">
                                    <h4 class="panel-title">
                                        <a> 基本信息 </a>
                                    </h4>
                                </div>
                                <div id="collapseOne" class="panel-collapse in">
                                    <div class="panel-body">
                                        @*<form id="basicSetting" action="#" method="post ">*@
                                            <table>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">姓名：&nbsp;&nbsp;</span>
                                                        <span id="AccountName"
                                                            style="margin-left:25px">&nbsp;&nbsp;</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">卡号：&nbsp;&nbsp;</span>
                                                        <span id="AccountCardNo"
                                                            style="margin-left:25px">&nbsp;&nbsp;</span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">钱包：&nbsp;&nbsp;</span>
                                                        <span id="AccountWallet"
                                                            style="margin-left:25px">&nbsp;&nbsp;</span>(元)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">充值金额：&nbsp;&nbsp;</span>
                                                        <input type="text" id="TopMoney"
                                                            style="width:100px">(元)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                    </td>
                                                </tr>
                                            </table>
                                            @*</form>*@
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-primary" onclick="getCheckedNodes()">查看权限信息</button>*@
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="Save()">确定</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="modal fade" id="myModalIsEnable" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" role="document">
        <form>
            <div class="modal-content" style="width:800px">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mone卡激活</h4>
                </div>
                <div class="modal-body">
                    <div class="content_wrap">
                        <form class="form-horizontal" role="form" id="feeFrom">

                            <div class="panel panel-default" style="margin-top:10px;">
                                <div class="panel-heading" data-toggle="collapse" data-parent="#accordion"
                                    href="#collapseOne">
                                    <h4 class="panel-title">
                                        <a> 激活卡基本信息 </a>
                                    </h4>
                                </div>
                                <div id="collapseOne" class="panel-collapse in">
                                    <div class="panel-body">
                                        @*<form id="basicSetting" action="#" method="post ">*@
                                            <table>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">账户姓名：&nbsp;&nbsp;</span>
                                                        @*<span id="AccountName"
                                                            style="margin-left:25px">&nbsp;&nbsp;</span>*@
                                                        <input type="text" id="IsEnableAccountName" style="width:100px">
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">账户卡号：&nbsp;&nbsp;</span>
                                                        <span id="IsEnableAccountCardNo"
                                                            style="margin-left:25px">&nbsp;&nbsp;</span>
                                                        @*<input type="text" id="IsEnableAccountCardNo"
                                                            style="width:100px">*@
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">钱包：&nbsp;&nbsp;</span>
                                                        <span id="IsEnableAccountWallet"
                                                            style="margin-left:25px">&nbsp;&nbsp;</span>(元)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <span style="margin-left:25px">收费员：&nbsp;&nbsp;</span>
                                                        <select class="ls-wp-fullwidth-container chosen-select"
                                                            id="employeeIdInput" name="employeeIdInput"
                                                            data-placeholder="选择收费员名称...">
                                                            @Html.Raw(Model.AllOption)
                                                            @foreach (var entity in Model.EmployeeList)
                                                            {
                                                            <option value="@entity.Id">@entity.TrueName</option>
                                                            }
                                                        </select>
                                                    </td>

                                                </tr>
                                            </table>
                                            @*</form>*@
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-primary" onclick="getCheckedNodes()">查看权限信息</button>*@
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <button type="button" class="btn btn-primary" onclick="IsEnableSave()">确定激活</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $('#myButton').on('click', function () {
        var param = {
            'nickName': $("#nickName").val(),
            'tel': $("#tel").val(),
            'CarNumber': $("#PlateNumber").val(),
        };
        console.log(param);
        jQuery('#grid-table').jqGrid('setGridParam', {
            ajaxSelectOptions: {
                type: "GET",
                async: false
            },
            ajaxGridOptions: {
                type: "POST",
                async: false
            },
            url: '../VideoConfig/getTUser',
            datatype: 'json',
            postData: {
                'nickName': $("#nickName").val(),
                'tel': $("#tel").val(),
                'CarNumber': $("#PlateNumber").val(),
            },
            page: 1
        }).trigger('reloadGrid');
    });

    @section scriptsgrid {
        jQuery(grid_selector).jqGrid({
            url: '../VideoConfig/getTUser',
            datatype: "json",
            ajaxSelectOptions: {
                type: "GET"
            },
            mtype: "post",
            shrinkToFit: false,
            height: 'auto',
            autowidth: true,
            colNames: ['操作', 'ID', '用户名', '手机号码', '车牌一', '车牌二', '车牌三', '卡号', '卡面号', '钱包', '数据来源', '是否启用',
                '是否自动扣款', '创建时间'
            ],
            colModel: [{
                    name: 'myac',
                    index: '',
                    width: 80,
                    fixed: true,
                    sortable: true,
                    resize: false,
                    formatter: 'actions',
                    hidden: window.rowedit,
                    formatoptions: {
                        keys: true,
                        delOptions: {
                            recreateForm: true,
                            beforeShowForm: beforeDeleteCallback
                        }
                    },
                    hidden: true
                },
                {
                    name: 'Id',
                    index: 'Id',
                    hidden: true,
                    sorttype: "int",
                    key: true
                },
                {
                    name: 'nickName',
                    index: 'nickName',
                    editable: true
                },
                {
                    name: 'tel',
                    index: 'tel',
                    editable: true
                },
                {
                    name: 'CarNumber1',
                    index: 'CarNumber1',
                    editable: true,
                    searchoptions: {
                        sopt: ['cn', 'nc', 'eq', 'ne']
                    }
                },
                {
                    name: 'CarNumber2',
                    index: 'CarNumber2',
                    editable: true,
                    searchoptions: {
                        sopt: ['cn', 'nc', 'eq', 'ne']
                    }
                },
                {
                    name: 'CarNumber3',
                    index: 'CarNumber3',
                    editable: true,
                    searchoptions: {
                        sopt: ['cn', 'nc', 'eq', 'ne']
                    }
                },
                {
                    name: 'CardNo',
                    index: 'CardNo',
                    editable: true
                },
                {
                    name: 'ProductNo',
                    index: 'ProductNo',
                    editable: true
                },
                {
                    name: 'Wallet',
                    index: 'Wallet',
                    editable: false,
                    formatter: "number",
                    search: false
                },
                {
                    name: 'AuthenticationSource',
                    index: 'AuthenticationSource',
                    editable: true,
                    search: false
                },
                {
                    name: 'IsActive',
                    index: 'IsActive',
                    editable: true,
                    edittype: "checkbox",
                    search: false,
                    editoptions: {
                        value: "true:false",
                        checked: "1"
                    },
                    unformat: aceSwitch,
                    formatter: YesAndNo
                },
                {
                    name: 'AutoDeduction',
                    index: 'AutoDeduction',
                    editable: true,
                    edittype: "checkbox",
                    search: false,
                    editoptions: {
                        value: "true:false",
                        checked: "1"
                    },
                    unformat: aceSwitch,
                    formatter: YesAndNo
                },

                {
                    name: 'CreationTime',
                    search: false,
                    index: 'CreationTime',
                    sorttype: "date",
                    formatter: 'date',
                    formatoptions: {
                        srcformat: 'Y-m-d H:i:s',
                        newformat: 'Y-m-d H:i:s'
                    }
                }
            ],
            viewrecords: true,
            rowNum: 10,
            rowList: [10, 20, 30],
            pager: pager_selector,
            altRows: true,
            sortname: 'Id',
            sortorder: 'desc',
            //toppager: true,
            editurl: "../OtherAccount/ProcessOtherAccount",
            multiselect: true,
            //multikey: "ctrlKey",
            multiboxonly: true,
            loadComplete: function () {
                var table = this;
                setTimeout(function () {
                    styleCheckbox(table);
                    updateActionIcons(table);
                    updatePagerIcons(table);
                    enableTooltips(table);
                }, 0);
            }
        });
    }
    @section scriptsbuttonbyself {
        if (window.field1) {
            jQuery(grid_selector).navButtonAdd(pager_selector, {
                buttonicon: "icon-plus-sign purple",
                title: "账号充值",
                caption: "充值",
                position: "last",
                onClickButton: function () {
                    var ids = jQuery(grid_selector).jqGrid('getGridParam', 'selarrrow');
                    if (ids.length == 1) {
                        Saveoper = "edit";
                        selectedId = ids[0];
                        $.ajax({
                            type: "Post",
                            url: "../OtherAccount/GetOtherAccountById",
                            data: {
                                id: selectedId
                            },
                            success: function (data) {
                                $("#AccountName").html(data.Name);
                                $("#AccountCardNo").html(data.CardNo);
                                $("#AccountWallet").html(data.Wallet);
                            }
                        });
                        $("#myModal").modal('show');
                    } else {
                        swal("", "请选择账户...", "info");
                    }
                }
            });
        }

        if (window.field2) {
            jQuery(grid_selector).navButtonAdd(pager_selector, {
                buttonicon: "icon-plus-sign purple",
                title: "账号解除绑定",
                caption: "解除绑定",
                position: "last",
                onClickButton: function () {
                    var ids = jQuery(grid_selector).jqGrid('getGridParam', 'selarrrow');
                    if (ids.length == 1) {
                        Saveoper = "edit";
                        selectedId = ids[0];
                        swal({
                                title: "您确定要解除绑定?",
                                type: "warning",
                                showCancelButton: true,
                                confirmButtonColor: "#DD6B55",
                                confirmButtonText: "OK",
                                closeOnConfirm: false
                            },
                            function () {
                                $.ajax({
                                    type: "Post",
                                    url: "../OtherAccount/OtherAccountAbsolvePlatNumber",
                                    data: {
                                        Id: selectedId
                                    },
                                    success: function (data) {
                                        swal("成功!", "已成功解除绑定！", "success");
                                    }
                                });
                            });
                        $.ajax({
                            type: "Post",
                            url: "../OtherAccount/GetOtherAccountById",
                            data: {
                                id: selectedId
                            },
                            success: function (data) {
                                $("#AccountName").html(data.Name);
                                $("#AccountCardNo").html(data.CardNo);
                                $("#AccountWallet").html(data.Wallet);
                            }
                        });
                        $("#myModal").modal('show')
                    } else {
                        swal("", "请选择账户...", "info");
                    }
                }
            });
        }
        if (window.field3) {
            jQuery(grid_selector).navButtonAdd(pager_selector, {
                buttonicon: "icon-plus-sign purple",
                title: "账号激活",
                caption: "激活",
                position: "last",
                onClickButton: function () {
                    var ids = jQuery(grid_selector).jqGrid('getGridParam', 'selarrrow');
                    if (ids.length == 1) {
                        Saveoper = "edit";
                        selectedId = ids[0];
                        $.ajax({
                            type: "Post",
                            url: "../OtherAccount/GetOtherAccountById",
                            data: {
                                id: selectedId
                            },
                            success: function (data) {
                                $("#IsEnableAccountName").html(data.Name);
                                $("#IsEnableAccountCardNo").html(data.CardNo);
                                $("#IsEnableAccountWallet").html(data.Wallet);
                            }
                        });
                        $("#myModalIsEnable").modal('show');
                    } else {
                        swal("", "请选择账户...", "info");
                    }
                }
            });
        }
    }
</script>


<script src="~/assets/js/jquery-2.0.3.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.chosen-select').chosen();
        $('#employeeIdInput_chosen').css('width', '150px');
    });

    function Save() {
        $.ajax({
            type: "Post",
            url: "../OtherAccount/OtherAccountVoucher",
            data: {
                id: selectedId,
                upMoney: $("#TopMoney").val()
            },
            success: function (data) {
                if (data.Success == false) {
                    swal("", data.Error.Message, "error");
                } else {
                    $('#myModal').modal('hide');
                    $("#TopMoney").val("");
                    $("#grid-table").trigger("reloadGrid");
                    Saveoper = "";
                }
            }
        });
    }



    function IsEnableSave() {
        $.ajax({
            type: "Post",
            url: "../OtherAccount/OtherAccountIsEnable",
            data: {
                id: selectedId,
                IsEnableAccountName: $("#IsEnableAccountName").val(),
                employeeIdInput: $("#employeeIdInput").val()
            },
            success: function (data) {
                if (data.Success == false) {
                    swal("", data.Error.Message, "error");
                } else {
                    $('#myModalIsEnable').modal('hide');
                    $("#IsEnableAccountName").val("");
                    $("#grid-table").trigger("reloadGrid");
                    Saveoper = "";
                }
            }
        });
    }
</script>